<div class='row'>
  <div class='col-auto welcome'>
    <h2>Welcome, {{post.user.username}}!</h2>
    <h3>Your Posts:</h3>
  </div>
</div>

{{#if posts.length}}
  {{#each posts as |post|}}

    <div class='post-title'>
      <div class='col-md-10'>
        <a href='/dashboard/edit/{{post.id}}'><h4>{{post.title}}</h4></a>
      </div>
      <div class='col-md-2'>
        <span>
          {{format_date post.date_created}}
        </span>
      </div>

    </div>

  {{/each}}
{{/if}}
 <footer>      
        <button type='submit' class='btn new-post-btn' id='add-new-post'>+New Post</button>
     
   
    </footer>


<script src='./js/dashboard.js'></script>